@page
@model Universite.Pages.Salles.IndexModel



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salle[0].NomSalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salle[0].LeBatiment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Salle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomSalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeBatiment.BatimentID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SalleID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SalleID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SalleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
