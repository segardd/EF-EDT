@page
@model Universite.Pages.Batiments.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Batiment[0].NomBatiment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Batiment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomBatiment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BatimentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BatimentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BatimentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
